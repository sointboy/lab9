<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/photo" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="При повороте направо Вы должны уступить дорогу:"
            android:textColor="#000000"
            android:textAlignment="center"
            android:textSize="34sp" />

        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#14000000"
            android:layout_marginTop="100px"
            android:layout_marginLeft="100px"
            android:layout_marginRight="100px"
            android:onClick="buttonClicked"
            android:height="150px"
            android:text="1. Только велосипедисту"
            android:textColor="#000000" />

        <Button
            android:id="@+id/button3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#14000000"
            android:layout_marginTop="10px"
            android:layout_marginLeft="100px"
            android:layout_marginRight="100px"
            android:onClick="buttonClicked2"
            android:textColor="#000000"
            android:height="150px"
            android:text="2. Только пешеходу" />

        <Button
            android:id="@+id/button4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#14000000"
            android:layout_marginTop="10px"
            android:layout_marginLeft="100px"
            android:layout_marginRight="100px"
            android:onClick="buttonClicked3"
            android:textColor="#000000"
            android:height="150px"
            android:text="3. Велосипедисту и пешеходам" />

        <Button
            android:id="@+id/button5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#14000000"
            android:layout_marginTop="10px"
            android:layout_marginLeft="100px"
            android:layout_marginRight="100px"
            android:onClick="buttonClicked4"
            android:textColor="#000000"
            android:height="150px"
            android:text="4. Никому" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>